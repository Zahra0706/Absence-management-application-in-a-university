#include <iostream>
using namespace std;

class Etudiant {
    private:
        string nom;
        int id;
        int nombre_absences;

    public:
        Etudiant(string nom, int id) {
            this->nom = nom;
            this->id = id;
            this->nombre_absences = 0;
        }

        void ajouter_absence() {
            this->nombre_absences++;
        }

        void afficher_absences() {
            cout << "Nombre d'absences de l'Ã©tudiant " << this->nom << " : " << this->nombre_absences << endl;
        }
};

class Cours {
    private:
        string nom;
        Etudiant* etudiants_inscrits[50];
        int nombre_etudiants_inscrits;

    public:
        Cours(string nom) {
            this->nom = nom;
            this->nombre_etudiants_inscrits = 0;
        }

        void ajouter_etudiant(Etudiant* etudiant) {
            this->etudiants_inscrits[this->nombre_etudiants_inscrits] = etudiant;
            this->nombre_etudiants_inscrits++;
        }

        void enregistrer_absence(Etudiant* etudiant) {
            etudiant->ajouter_absence();
        }
};

int main() {
    Etudiant* etudiant1 = new Etudiant("Alice", 1);
    Etudiant* etudiant2 = new Etudiant("Bob", 2);
    Cours* cours = new Cours("Programmation en C++");

    cours->ajouter_etudiant(etudiant1);
    cours->ajouter_etudiant(etudiant2);

    cours->enregistrer_absence(etudiant1);
    cours->enregistrer_absence(etudiant1);
    cours->enregistrer_absence(etudiant2);

    etudiant1->afficher_absences();
    etudiant2->afficher_absences();

    return 0;
}
